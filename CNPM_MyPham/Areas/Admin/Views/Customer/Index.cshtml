<script>
    function TimKiem(){
        var type = $("#select").val();
        var input = $("#input_search").val();
        $.ajax({
            url: '/Admin/Customer/TimKiem',
            type: "post",
            dataType: "json",
            data: {
                type: type,
                input: input
            },
            success: function (data) {
                if (data != -1) {
                    var s = "";
                    var d = "";
                    for(let i = 0; i < data.length; ++i){
                        d = data[i].dateborn.replace("T00:00:00", "");
                        d = d.split("-");
                        s +=`<tr>
                                <td>`+ data[i].user +`</td>
                                <td>`+ data[i].full_name +`</td>
                                <td>`+ data[i].phone +`</td>
                                <td>`+ data[i].mail +`</td>
                                <td>`+ data[i].address +`</td>
                                <td>`+ data[i].sex +`</td>
                                <td>`+ d[2] + `/` + d[1] + '/' + d[0] +`</td>`;
                                if(data[i].status == 1){
                                    s += `<td>Hiện</td>`;
                                }
                                else{
                                    s += `<td>Ẩn</td>`;
                                }
                        s +=    `<td>
                                    <button data-toggle="tooltip" title="" class="pd-setting-ed" data-original-title="Edit" data-toggle="modal" data-target="#myModal" onclick="EditKH('`+ data[i].user +`')"><i class="pe-7s-config"></i></button>`;
                                    if (data[i].status != 0)
                                    {
                                        s+= `<button data-toggle="tooltip" title="" class="pd-setting-ed" data-original-title="Trash" onclick="RemoveKH('`+ data[i].user +`')"><i class="pe-7s-lock"></i></button>`;
                                    }
                                    else
                                    {
                                        s+= `<button data-toggle="tooltip" title="" class="pd-setting-ed" data-original-title="Trash" onclick="BackKH('`+ data[i].user +`')"><i class="pe-7s-unlock"></i></button>`;
                                    }
                        s +=    `</td>
                            </tr>`;
                    }
                    $("#suakh1").html(s);
                }
            },
            error: function (e) {
                Swal.fire({
                    type: "error",
                    title: "Lỗi tìm kiếm khách hàng => TimKiem",
                    html: e.responseText
                });
            }
        });
    }
    function EditKH(user) {
        $(".form-group span").text("");
        $("#title-modal").html("Sửa nhân viên " + user);
        $("#user").attr('readonly', true);
        $.ajax({
            url: '/Admin/Customer/EditKH',
            type: "post",
            dataType: "json",
            data: {
                user: user
            },
            success: function (data) {
                if (data != -1) {
                    $("#user").val(data.user);
                    $("#pass").val(data.pass);
                    $("#repass").val(data.repass);
                    $("#full_name").val(data.full_name);
                    $("#phone").val(data.phone);
                    $("#mail").val(data.mail);
                    $("#address").val(data.address);
                    $("#sex").val(data.sex);
                    var d = formatDate(data.dateborn);
                    $("#dateborn").val(d);

                }
            },
            error: function (e) {
                Swal.fire({
                    type: "error",
                    title: "Lỗi lấy thông tin khách hàng => EditKH",
                    html: e.responseText
                });
            }
        });
        $("#button_submit").html("Sửa");
        $("#button_submit").attr('onclick', 'SubmitEditKH()');
        $("#myModal").modal();

    }
    function SubmitEditKH() {
        $.ajax({
            url: '/Admin/Customer/SubmitEditKH',
            type: 'post',
            dataType: 'json',
            data: {
                user: $('#user').val(),
                pass: $('#pass').val(),
                repass: $('#repass').val(),
                full_name: $('#full_name').val(),
                phone: $('#phone').val(),
                mail: $('#mail').val(),
                address: $('#address').val(),
                sex: $('#sex').val(),
                dateborn: $('#dateborn').val()
            },
            async: false,
            success: function (data) {
                if(data != -1){
                    alert("Sửa thành công");
                    location.reload();
                }
            },
            error: function (e) {
                Swal.fire({
                    type: 'error',
                    title: 'Lỗi sửa tài khoản'
                });
            }
        });
    }
    function BackKH(user) {
        Swal.fire({
            type: "question",
            title: "Xác nhận",
            text: "Bạn có muốn mở khóa tài khoản này này?",
            showCancelButton: true,
            confirmButtonText: 'Đồng ý',
            cancelButtonText: 'Hủy'
        }).then((result) => {
            if (result.value) {
                $.ajax({
                    url: '/Admin/Customer/BackKH',
                    type: 'post',
                    dataType: 'json',
                    data: {
                        user: user
                    },
                    success: function (data) {
                        if (data == "ok") {
                            alert("Đã mở khóa thành công");
                            location.reload();
                        }
                        else {
                            alert("Mở khóa không thành công");
                        }
                    },
                    error: function (e) {
                        Swal.fire({
                            type: 'error',
                            title: 'Lỗi mở khóa tài khoản này',
                            html: e.responseText
                        });
                    }
                });
            }
        });
    }

    function RemoveKH(user) {
        Swal.fire({
            type: "question",
            title: "Xác nhận",
            text: "Bạn có muốn khóa tài khoản này này?",
            showCancelButton: true,
            confirmButtonText: 'Đồng ý',
            cancelButtonText: 'Hủy'
        }).then((result) => {
            if (result.value) {
                $.ajax({
                    url: '/Admin/Customer/RemoveKH',
                    type: 'post',
                    dataType: 'json',
                    data: {
                        user: user
                    },
                    success: function (data) {
                        if (data == "ok") {
                            alert("Đã khóa thành công");
                            location.reload();
                        }
                        else {
                            alert("Khóa không thành công");
                        }
                    },
                    error: function (e) {
                        Swal.fire({
                            type: 'error',
                            title: 'Lỗi khóa tài khoản này',
                            html: e.responseText
                        });
                    }
                });
            }
        });
    }
    function formatDate(date) {
        var d = new Date(date),
            month = '' + (d.getMonth() + 1),
            day = '' + d.getDate(),
            year = d.getFullYear();

        if (month.length < 2) 
            month = '0' + month;
        if (day.length < 2) 
            day = '0' + day;

        return [year, month, day].join('-');
    }
    $(document).ready(function () {
        $("#myBtn").click(function () {
            $("#myModal").modal();
        });
    });

    function cc() {
        $("#myModal").modal();
    }
    
</script>

