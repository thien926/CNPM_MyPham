                            </div>
                            <div class="form-group">
                                <label>Họ tên</label>
                                <input type="text" class="form-control" id="full_name" placeholder="Họ tên" asp-for="@Model.KH.full_name">
                                <span asp-validation-for="@Model.KH.full_name"></span>
                            </div>
                            <div class="form-group">
                                <label>Số điện thoại</label>
