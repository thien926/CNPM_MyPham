<script>
    function TimKiem(){
        var type = $("#select").val();
        var input = $("#input_search").val();
        $.ajax({
            url: '/Admin/Brand/TimKiem',
            type: "post",
            dataType: "json",
            data: {
                type: type,
                input: input
            },
            success: function (data) {
                if (data != -1) {
                    var s = "";
                    for(let i = 0; i < data.length; ++i){
                        s += `<tr>
                                <td>`+ data[i].brand_id +`</td>
                                <td>`+ data[i].name +`</td>
                                <td>
                                    <button data-toggle="tooltip" title="" class="pd-setting-ed" data-original-title="Edit" data-toggle="modal" data-target="#myModal" onclick="EditBrand(`+ data[i].brand_id +`)"><i class="pe-7s-config"></i></button>
                                    <button data-toggle="tooltip" title="" class="pd-setting-ed" data-original-title="Trash" onclick="RemoveBrand(`+ data[i].brand_id +`)"><i class="pe-7s-trash"></i></button>
                                </td>
                            </tr>`;
                    }
                    $("#suath1").html(s);
                }
            },
            error: function (e) {
                Swal.fire({
                    type: "error",
                    title: "Lỗi tìm kiếm thương hiệu => TimKiem",
                    html: e.responseText
                });
            }
        });
    }

    function EditBrand(brand_id) {
        $("#title-modal").html("Sửa thương hiệu sản phẩm " + brand_id);
        $("#brand_id").attr('readonly', true);
        $.ajax({
            url: '/Admin/Brand/EditBrand',
            type: "post",
            dataType: "json",
            data: {
                brand_id: brand_id
            },
            success: function (data) {
                if (data != -1) {
                    $("#brand_id").val(data.brand_id);
                    $("#name").val(data.name);
                }
            },
            error: function (e) {
                Swal.fire({
                    type: "error",
                    title: "Lỗi lấy thông tin thương hiệu => EditBrand",
                    html: e.responseText
                });
            }
        });
        $("#button_submit").html("Sửa");
        $("#button_submit").attr('onclick', 'SubmitEditTH()');
        $("#myModal").modal();

    }
    function SubmitEditTH() {
        var brand_id = parseInt($('#brand_id').val());
        var name = $('#name').val();
        if(name.trim() == ""){
            return;
        }
        $.ajax({
            url: '/Admin/Brand/SubmitEditTH',
            type: 'post',
            dataType: 'json',
            data: {
                brand_id: brand_id,
                name: name
            },
            async: false,
            success: function (data) {
                alert("Sửa thành công");
                location.reload();
            },
            error: function (e) {
                Swal.fire({
                    type: 'error',
                    title: 'Lỗi sửa thương hiệu',
                    html: e.responseText
                });
            }
        });
    }
    function RemoveBrand(brand_id){
        Swal.fire({
            type: "question",
            title: "Xác nhận",
            text: "Bạn có muốn xóa thương hiệu và tất cả các sản phẩm thuộc thương hiệu này?",
            showCancelButton: true,
            confirmButtonText: 'Đồng ý',
            cancelButtonText: 'Hủy'
        }).then((result) => {
            if (result.value) {
                $.ajax({
                    url: '/Admin/Brand/RemoveTH',
                    type: 'post',
                    dataType: 'json',
                    data: {
                        brand_id: brand_id
                    },
                    success: function (data) {
                        if (data == "ok") {
                            alert("Đã xóa thành công");
                            location.reload();
                        }
                        else {
                            alert("Xóa không thành công");
                        }
                    },
                    error: function (e) {
                        Swal.fire({
                            type: 'error',
                            title: 'Lỗi xóa thương hiệu',
                            html: e.responseText
                        });
                    }
                });
            }
        });
    }
    function ThemTH(){
        $("#title-modal").html("Thêm thương hiệu");
        $("#myModal").modal();
        $.ajax({
            url: '/Admin/Brand/MaxBrand_ID',
            type: "post",
            dataType: "json",
            data: {
            },
            success: function (data) {
                if (data != -1) {
                    $("#brand_id").val(data);
                    $("#brand_id").attr('readonly', true);
                }
            },
            error: function (e) {
                Swal.fire({
                    type: "error",
                    title: "Lỗi lấy mã thương hiệu MAX=> ThemTH",
                    html: e.responseText
                });
            }
        });
        $("#button_submit").html("Thêm");
        $("#button_submit").attr('onclick', 'SubmitThemTH()');
    }

    function SubmitThemTH(){
        $("#button_submit").focus();
        var brand_id = parseInt($('#brand_id').val());
        var name = $('#name').val();
        $.ajax({
            url: '/Admin/Brand/SubmitThemTH',
            type: 'post',
            dataType: 'json',
            data: {
                brand_id: brand_id,
                name: name
            },
            async: false,
            success: function (data) {
                alert("Thêm thành công");
                location.reload();
            },
            error: function (e) {
                Swal.fire({
                    type: 'error',
                    title: 'Lỗi thêm thương hiệu',
                    html: e.responseText
                });
            }
        });
    }

    $(document).ready(function () {
        $("#myBtn").click(function () {
            $("#myModal").modal();
        });
    });

    function cc() {
