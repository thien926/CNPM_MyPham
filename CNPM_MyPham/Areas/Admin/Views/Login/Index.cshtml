@model Application.DTOs.LoginModelDto;
@{
    ViewData["Title"] = "Login Admin";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>@ViewData["Title"]</title>
    <link href="~/css/admin/login/style.css" rel="stylesheet" />
    <style>
        .field-validation-error {
            color: red
        }

        .validation-summary-errors {
            color: red
        }
    </style>
    <script src="~/js/Validate-client/jquery-2.2.0.min.js"></script>
    <script src="~/js/Validate-client/jquery.validate.min.js"></script>
    <script src="~/js/Validate-client/jquery.validate.unobtrusive.min.js"></script>
</head>
<body>
    <section class="container">
        <div class="login">
            <h1>Đăng nhập Admin</h1>
            <form method="post" action="index.html" onsubmit="return(cc());">
                <div asp-validation-summary="ModelOnly"></div>
                <p><input type="text" asp-for="@Model.user" placeholder="Tài khoản"></p>
                <span asp-validation-for="@Model.user"></span>
                <p><input type="password" asp-for="@Model.pass" placeholder="Mật khẩu"></p>
                <span asp-validation-for="@Model.pass"></span>
                <p class="submit"><input type="submit" name="commit" value="Login"></p>
            </form>
        </div>
    </section>

    <script type="text/javascript">
    function cc(){
      var x = document.forms[0].login.value;
      var y = document.forms[0].password.value;
      alert(x + " " + y);
      return false;
    }
    </script>
</body>
</html>
