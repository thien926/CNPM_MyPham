<script>
    function SubmitEditNCC(){
        var ncc_id = parseInt($('#ncc_id').val());
        var name = $('#name').val();
        var status = parseInt($('#status').val());
        $.ajax({
            url: '/Admin/NCC/SubmitEditNCC',
            type: 'post',
            dataType: 'json',
            data: {
                ncc_id: ncc_id,
                name: name,
                status: status
            },
            async: false,
            success: function (data) {
                alert("Sửa thành công");
                location.reload();
            },
            error: function (e) {
                Swal.fire({
                    type: 'error',
                    title: 'Lỗi sửa nhà cung cấp',
                    html: e.responseText
                });
            }
        });
    }

    function EditNCC(ncc_id) {
        $("#title-modal").html("Sửa nhà cung cấp " + ncc_id);
        $("#ncc_id").attr('readonly', true);
        $("#status").attr('readonly', true);
        $.ajax({
            url: '/Admin/NCC/EditNCC',
            type: "post",
            dataType: "json",
            data: {
                ncc_id: ncc_id
            },
            success: function (data) {
                if (data != -1) {
                    $("#ncc_id").val(data.ncc_id);
                    $("#name").val(data.name);
                    $("#status").val(data.status);
                }
            },
            error: function (e) {
                Swal.fire({
                    type: "error",
                    title: "Lỗi lấy thông tin loại sản phẩm => EditNCC",
                    html: e.responseText
                });
            }
        });
        $("#myModal").modal();

    }

    function BackNCC(ncc_id) {
        Swal.fire({
            type: "question",
            title: "Xác nhận",
            text: "Bạn có muốn HIỆN nhà cung cấp này không?",
            showCancelButton: true,
            confirmButtonText: 'Đồng ý',
            cancelButtonText: 'Hủy'
        }).then((result) => {
            if (result.value) {
                $.ajax({
                    url: '/Admin/NCC/BackNCC',
                    type: 'post',
                    dataType: 'json',
                    data: {
                        ncc_id: ncc_id
                    },
                    success: function (data) {
                        if (data == "ok") {
                            alert("Đã HIỆN thành công");
                            location.reload();
                        }
                        else {
                            alert("HIỆN không thành công");
                        }
                    },
                    error: function (e) {
                        Swal.fire({
                            type: 'error',
                            title: 'Lỗi HIỆN nhà cung cấp',
                            html: e.responseText
                        });
                    }
                });
            }
        });
    } 

    function RemoveNCC(ncc_id) {
        Swal.fire({
            type: "question",
            title: "Xác nhận",
            text: "Bạn có muốn ẨN nhà cung cấp này không?",
            showCancelButton: true,
            confirmButtonText: 'Đồng ý',
            cancelButtonText: 'Hủy'
        }).then((result) => {
            if (result.value) {
                $.ajax({
                    url: '/Admin/NCC/RemoveNCC',
                    type: 'post',
                    dataType: 'json',
                    data: {
                        ncc_id: ncc_id
                    },
                    success: function (data) {
                        if (data == "ok") {
                            alert("Đã ẨN thành công");
                            location.reload();
                        }
                        else {
                            alert("ẨN không thành công");
                        }
                    },
                    error: function (e) {
                        Swal.fire({
                            type: 'error',
                            title: 'Lỗi ẨN nhà cung cấp',
                            html: e.responseText
                        });
                    }
                });
            }
        });
    }
</script>

