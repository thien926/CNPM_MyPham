@section Scripts{
    <script>
        $(".nav-menu li").removeClass( "active" );
        $("#page_cart").addClass("active");

        function CheckOutCart(){
            this.focus();
            var address = $("#input_nhapdcnh").val();
            $.ajax({
                url : "/Cart/CheckOutCart",
                type: "POST",
                dataType: "json",
                data:{
                    address: address
                },
                async: false,
                success: function(data){
                    if(data != 1){
                        Swal.fire({
                            type: "error",
                            title: "Lỗi đặt hàng",
                            html: data
                        });
                    }
                    else{
                        Swal.fire({
                            type: "success",
                            title: "Đặt hàng thành công"
                        }).then((result) => {
                            // layout.js
                            LoadCartForLayOut();
                            $("#sua_listSP").html("");
                            $("#tongsp").html("0");
                            $("#tongtien").html("0 Đ");
                        });
                    }
                },
                error: function(e){
                    Swal.fire({
                        type: "error",
                        title: "Lỗi đặt hàng => CheckOutCart",
                        html: e.responseText
                    });
                }
            });
        }
        function onchange_dc(tag){
            if(tag.value == "dcmacdinh"){
                $("#intput_dcnh").css("display", "none");
            }
            else if(tag.value == "diachi"){
                $("#intput_dcnh").css("display", "block");
            }
        }
        function RemoveCart(idsp){
            $.ajax({
                url : "@Url.Action("RemoveCart")",
                type: "POST",
                dataType: "json",
                data: {
                    idsp: idsp
                },
                async: false,
                success: function(data){
                    if(data != null){
                        location.reload();
                    }
                },
                error: function(e){
                    alert(e.responseText);
                }
            });
        }
        function ChangeSL(tag, idsp){
            var slsp = tag.value;
            $.ajax({
                url : "@Url.Action("UpdateSP")",
                type: "POST",
                dataType: "json",
                data: {
                    idsp: idsp,
                    slsp: slsp
                },
                async: false,
                success: function(data){
                    if(data != null){
                        location.reload();
                    }
                },
                error: function(e){
                    alert(e.responseText);
                }
            });
        }
        $(document).ready(function(){
            $(".inc").click(function(){
                var idsp = $(this).parent().parent().parent().find("input").val();
                $.ajax({
                    url : "@Url.Action("TangSP")",
                    type: "POST",
                    dataType: "json",
